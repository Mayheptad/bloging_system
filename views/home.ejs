<h1>Home</h1>
<p> <%= homeStartingContent %> </p>
 

<div class="d-flex main_post_right_side_bar">

<div class="main_articles">
  <% posts.forEach( eachPost => { %>
    <h1> <%= eachPost.postTitle %> </h1>
    <p> <%= eachPost.postContent.substring(0, 100) + '...' %> <a href='/posts/<%= eachPost._id %> '>Read More</a> </p>
   <% } ); %>
</div>

<div class="right_side_bar">
  <% popularPost.forEach( post => { %>
 <h2> <a href="/posts/<%= post._id %>"> <%= post.postTitle %> </a> </h2>
    <!-- <p> <%= post.postContent.substring(0, 100) + '...' %> <a href='/posts/<%= post._id %>'>Read More</a> </p> -->
   <% } ); %>
</div>

</div>
 
